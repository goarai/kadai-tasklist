<%= form_with(model: task, local: true) do |f| %>

<%# --------------------- エラーメッセージの表示 ------------------------- %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |errmsg| %>
          <li><%= errmsg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%# --------------------- 投稿フォームの表示＆作成 ------------------------- %>
  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.submit '作成' %>
  
<% end %>